pipeline {
    agent any

    stages {

        stage('Checkout') {
            steps {
                echo "Pulling code from GitHub..."
                git url: 'https://github.com/swarajatkare/jenkins.git', branch: 'main'
            }
        }

        stage('Build') {
            steps {
                echo "Running build step..."
                sh 'echo Building application...'
            }
        }

        stage('Test') {
            steps {
                echo "Running tests..."
                sh 'echo Tests executed!' 
            }
        }

        stage('Deploy') {
            steps {
                echo "Deploying application..."
                sh 'echo App deployed successfully thank you!!!!!!!!!!!!!!!'
            }
        }
    }
}
