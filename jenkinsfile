pipeline {
    agent any
 
    triggers {
        githubPush()
    }
 
    stages {
 
        stage('Pull code from GitHub') {
            steps {
                git branch: 'main', url: 'https://github.com/swarajatkare/jenkins.git'
            }
        }
 
        stage('Build') {
            steps {
                sh '''
                    sudo -i
                    sudo apt update -y
                    sudo apt install -y nginx
 
                    # Start nginx
                    sudo systemctl start nginx
                    sudo systemctl enable nginx
 
                    # Write message
                    echo "Welcome! NGINX is successfully deployed via Jenkins." | sudo tee /var/www/html/index.html
                '''
            }
        }
    }
}